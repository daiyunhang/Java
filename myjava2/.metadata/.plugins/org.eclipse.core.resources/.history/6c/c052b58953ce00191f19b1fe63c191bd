package com.tedu.jt.utils;
import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import com.mchange.v2.c3p0.ComboPooledDataSource;
/**
 * JDBCå·¥å…·ç±?
 */
public class JDBCUtils {
	/**
	 * 2.åˆ›å»ºc3p0è¿æ¥æ± å®ä¾?
	 */
	private static ComboPooledDataSource pool 
					= new ComboPooledDataSource();

	/**
	 * 1.ç§æœ‰åŒ–æ„é€ å‡½æ•?
	 */
	private JDBCUtils() {}

	/**
	 * 3.æä¾›getConnæ–¹æ³•, ç”¨äºä»è¿æ¥æ± ä¸­è·å–ä¸€ä¸ªè¿æ¥å¯¹è±?
	 * @return Connection è¿æ¥å¯¹è±¡
	 * @throws Exception
	 */
	public static Connection getConn() throws Exception {
		try {
			return pool.getConnection();
		} catch (SQLException e) {
			e.printStackTrace();
			throw e;
		}
	}
	
	/**
	 * 4.æä¾›closeæ–¹æ³•, ç”¨äºé‡Šæ”¾èµ„æº
	 * @param conn è¿æ¥å¯¹è±¡
	 * @param ps ä¼ è¾“å™¨å¯¹è±?
	 * @param rs ç»“æœé›†å¯¹è±?
	 */
	public static void close(Connection conn, Statement stat,
			ResultSet rs) {
		if(rs != null ){
			try {
				rs.close();
			} catch (SQLException e) {
				e.printStackTrace();
			}finally{
				rs = null;
			}
		}
		if(stat != null ){
			try {
				stat.close();
			} catch (SQLException e) {
				e.printStackTrace();
			}finally{
				stat = null;
			}
		}
		if(conn != null ){
			try {
				conn.close();
			} catch (SQLException e) {
				e.printStackTrace();
			}finally{
				conn = null;
			}
		}
	}
}
